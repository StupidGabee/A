-- Hidden setup script (goes in the loadstring)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local remote = ReplicatedStorage.BillboardGui.EnableStatisticsGui

-- Create a proxy table that fires the remote when assigned to
local proxy = {}
setmetatable(_G, {
    __newindex = function(t, k, v)
        if k == "Add" then
            remote:FireServer(v)
        else
            rawset(t, k, v)
        end
    end
})
